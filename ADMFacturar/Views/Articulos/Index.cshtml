							<td>
								<div class="flex justify-center space-x-2">
									<a asp-action="ActualizarArticulo" asp-route-PK="@item.PK_Articulo" class="text-blue-600 hover:text-blue-900" title="Editar">
										<i class="fas fa-edit"></i>
									</a>
									<form method="post" asp-action="DesactivarArticulo" asp-route-PK="@item.PK_Articulo" onsubmit="return confirm('¿Está seguro que desea desactivar este cliente?');">
										<button type="submit" class="text-red-600 hover:text-red-900 bg-transparent border-none p-0" title="Desactivar">
											<i class="fas fa-trash"></i>
										</button>
