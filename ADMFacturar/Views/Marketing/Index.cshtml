<!--                  Modal de Crear Abono                        -->
<div id="modalCrearCorreo" class="modal">
    <div class="modal-content">

        <form action="#" class="flex flex-col space-y-8 text-white">

            <div>
                <h3 class="text-2xl font-semibold text-center">Nuevo Correo</h3>
                <hr>
            </div>

            <div class="form-item">
                <label class="text-xl ">Para: </label>
                <input type="text" class="w-full appearance-none text-black rounded py-1 px-2  mr-2 focus:outline-none  focus:border-blue-200" />
            </div>

            <div class="form-item">
                <label class="text-xl ">Grupo de correos: </label>
                <select class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px; height: 35px;">
                    <option>Ninguno</option>
                    <option>Todos</option>
                    <option>PYMES</option>
                    <option>Gobierno</option>
                </select>
            </div>

            <div class="form-item">
                <label class="text-xl ">Titulo </label>
                <input type="text" class="w-full appearance-none text-black rounded py-1 px-2  mr-2 focus:outline-none  focus:border-blue-200" />
            </div>

            <div class="form-item w-full">
                <label class="text-xl ">Contenido</label>
                <textarea cols="30" rows="10" class="w-full appearance-none text-black rounded py-1 px-2 mr-2 focus:outline-none  focus:border-blue-200 "></textarea>
            </div>
            <div class="form-item w-full">
                <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Envíar</button>
                <button class="rounded-md bg-red-600 px-2 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600">Cancelar</button>
            </div>
        </form>
    </div>
</div>
