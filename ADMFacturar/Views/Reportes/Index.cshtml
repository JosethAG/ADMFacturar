    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Recuperar el total del costo almacenado en localStorage
            var totalCosto = localStorage.getItem('totalCosto');

            // Actualizar el total en la vista index si existe en localStorage
            if (totalCosto) {
                document.getElementById('totalCostoIndex').textContent = '₡' + parseFloat(totalCosto).toFixed(2);
            }
        });
    </script>

