    <title>Reportes</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-gray-100">

    <div class="container mx-auto py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4">

            <!-- Total de Venta -->
            <div class="bg-white rounded-lg shadow-md p-6 text-center">
                <i class="fas fa-chart-line text-5xl text-blue-500 mb-4"></i>
                <h3 class="text-lg font-semibold">Total de Venta</h3>
                <p class="text-gray-600">₡5000</p>
            </div>
                  <!-- Total de Cobro -->
            <div class="bg-white rounded-lg shadow-md p-6 text-center">
                <i class="fas fa-coins text-5xl text-blue-500 mb-4"></i>
                <h3 class="text-lg font-semibold">Total de Cobro</h3>
                <p class="text-gray-600">₡50,000</p>
            </div>
            <!-- Total de Ganancia -->
            <div class="bg-white rounded-lg shadow-md p-6 text-center">
                <i class="fas fa-money-bill text-5xl text-blue-500 mb-4"></i>
                <h3 class="text-lg font-semibold">Total de Ganancia</h3>
                <p class="text-gray-600">₡1500</p>
            </div>
            <!-- Total Costo Inventario -->
            <div class="bg-white rounded-lg shadow-md p-6 text-center">
                <i class="fas fa-warehouse text-5xl text-blue-500 mb-4"></i>
                <h3 class="text-lg font-semibold">Total Costo Inventario</h3>
                <p class="text-gray-600">₡3000</p>
            </div>
            <!-- Total Descuentos -->
            <div class="bg-white rounded-lg shadow-md p-6 text-center">
                <i class="fas fa-percent text-5xl text-blue-500 mb-4"></i>
                <h3 class="text-lg font-semibold">Total de Descuentos</h3>
                <p class="text-gray-600">₡500</p>
            </div>
            <!-- Total Notas de Crédito -->
            <div class="bg-white rounded-lg shadow-md p-6 text-center">
                <i class="far fa-credit-card text-5xl text-blue-500 mb-4"></i>
                <h3 class="text-lg font-semibold">Total Notas de Crédito</h3>
                <p class="text-gray-600">₡200</p>
            </div>
            <!-- Total Notas de Crédito por Monto -->
            <div class="bg-white rounded-lg shadow-md p-6 text-center">
                <i class="far fa-money-bill-alt text-5xl text-blue-500 mb-4"></i>
                <h3 class="text-lg font-semibold">Total Notas de Crédito por Monto</h3>
                <p class="text-gray-600">₡300</p>
            </div>
            <!-- Total de Compras -->
            <div class="bg-white rounded-lg shadow-md p-6 text-center">
                <i class="fas fa-shopping-bag text-5xl text-blue-500 mb-4"></i>
                <h3 class="text-lg font-semibold">Total de Compras</h3>
                <p class="text-gray-600">₡2000</p>
            </div>
        </div>

        <!-- Botones de acceso a reportes -->
        <div class="mt-8 flex flex-wrap justify-center gap-4">
            <a asp-action="RVentas" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:bg-white hover:text-blue-500 text-white">
                Reporte de Ventas
            </a>
            <a asp-action="REstadosCuentas" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:bg-white hover:text-blue-500 text-white">
                Reporte Estados de Cuenta
            </a>
            <a asp-action="RCardex" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:bg-white hover:text-blue-500 text-white">
                Reporte Kardex
            </a>
            <a asp-action="RInventario" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:bg-white hover:text-blue-500 text-white">
                Reporte de Inventario
            </a>
            <a asp-action="RVendedores" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:bg-white hover:text-blue-500 text-white">
                Reporte de Vendedores
            </a>
            <a asp-action="RCxC" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:bg-white hover:text-blue-500 text-white">
                Reporte Cuentas Por Cobrar
            </a>
            <a asp-action="RCxP" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:bg-white hover:text-blue-500 text-white">
                Reporte Cuentas por Pagar
            </a>
        </div>


