@using ADM.Models
@model Reportes

@{
    var Reportes = ViewData["Reportes"] as List<Reportes>;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reportes</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-gray-100">

    <div class="container mx-auto py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4">
            @if (Reportes != null)
            {
                @foreach (var Reporte in Reportes)
                {
                    <!-- Total de Venta -->
                    <div class="max-w-sm p-6 bg-gray-900 border border-gray-700 rounded-lg shadow-lg transition duration-300 transform hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center">
                        <i class="fas fa-chart-line text-5xl text-white mb-4"></i>
                        <h3 class="text-lg font-semibold text-white">Total de Venta</h3>
                        <p class="text-white">₡@Html.DisplayFor(modelItem => Reporte.TotalVenta)</p>
                    </div>
                    <!-- Total de Cobro -->
                    <div class="max-w-sm p-6 bg-gray-900 border border-gray-700 rounded-lg shadow-lg transition duration-300 transform hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center">
                        <i class="fas fa-coins text-5xl text-white mb-4"></i>
                        <h3 class="text-lg font-semibold text-white">Total de Cobro</h3>
                        <p class="text-white">₡@Html.DisplayFor(modelItem => Reporte.TotalCobro)</p>
                    </div>

                    <!-- Total de Ganancia -->
                    <div class="max-w-sm p-6 bg-gray-900 border border-gray-700 rounded-lg shadow-lg transition duration-300 transform hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center">
                        <i class="fas fa-money-bill text-5xl text-white mb-4"></i>
                        <h3 class="text-lg font-semibold text-white">Total de Ganancia</h3>
                        <p class="text-white">₡@Html.DisplayFor(modelItem => Reporte.TotalGanancia)</p>
                    </div>

                    <!-- Total Costo Inventario -->
                    <div class="max-w-sm p-6 bg-gray-900 border border-gray-700 rounded-lg shadow-lg transition duration-300 transform hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center">
                        <i class="fas fa-warehouse text-5xl text-white mb-4"></i>
                        <h3 class="text-lg font-semibold text-white">Total Costo Inventario</h3>
                        <p class="text-white">₡@Html.DisplayFor(modelItem => Reporte.TotalCosto)</p>
                    </div>

                    <!-- Total Descuentos -->
                    <div class="max-w-sm p-6 bg-gray-900 border border-gray-700 rounded-lg shadow-lg transition duration-300 transform hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center">
                        <i class="fas fa-percent text-5xl text-white mb-4"></i>
                        <h3 class="text-lg font-semibold text-white">Total de Descuentos</h3>
                        <p class="text-white">₡@Html.DisplayFor(modelItem => Reporte.TotalDescuentos)</p>
                    </div>

                    <!-- Total Notas de Crédito -->
                    <div class="max-w-sm p-6 bg-gray-900 border border-gray-700 rounded-lg shadow-lg transition duration-300 transform hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center">
                        <i class="far fa-credit-card text-5xl text-white mb-4"></i>
                        <h3 class="text-lg font-semibold text-white">Total Notas de Crédito</h3>
                        <p class="text-white">₡@Html.DisplayFor(modelItem => Reporte.TotalNotaCredito)</p>
                    </div>

                    <!-- Total de Compras -->
                    <div class="max-w-sm p-6 bg-gray-900 border border-gray-700 rounded-lg shadow-lg transition duration-300 transform hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center">
                        <i class="fas fa-shopping-bag text-5xl text-white mb-4"></i>
                        <h3 class="text-lg font-semibold text-white">Total de Compras</h3>
                        <p class="text-white">₡@Html.DisplayFor(modelItem => Reporte.TotalCompras)</p>
                    </div>
                }
            }       
        </div>

        <!-- Botones de acceso a reportes -->
        <div class="mt-8 flex flex-wrap justify-center gap-4">
            <a asp-action="RVentas" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center text-white">
                Reporte de Ventas
            </a>
            <a asp-action="REstadosCuentas" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center text-white">
                Reporte Estados de Cuenta
            </a>
            <a asp-action="RKardex" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center text-white">
                Reporte Kardex
            </a>
            <a asp-action="RInventario" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center text-white">
                Reporte de Inventario
            </a>
            <a asp-action="RVendedores" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center text-white">
                Reporte de Vendedores
            </a>
            <a asp-action="RCxC" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center text-white">
                Reporte Cuentas Por Cobrar
            </a>
            <a asp-action="RCxP" class="max-w-xs p-4 bg-none border border-gray-200 rounded-lg shadow dark:bg-white-800 dark:border-white-700 hover:-translate-y-1 hover:scale-105 hover:bg-gray-800 cursor-pointer text-center text-white">
                Reporte Cuentas por Pagar
            </a>
        </div>


    </div>


    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Recuperar el total del costo almacenado en localStorage
            var totalCosto = localStorage.getItem('totalCosto');

            // Actualizar el total en la vista index si existe en localStorage
            if (totalCosto) {
                document.getElementById('totalCostoIndex').textContent = '₡' + parseFloat(totalCosto).toFixed(2);
            }
        });
    </script>

</body>
</html>
