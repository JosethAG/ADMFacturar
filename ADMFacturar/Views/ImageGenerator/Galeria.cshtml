@model IEnumerable<ADM.Models.ApiMonster.ImagePrompt>

@{
    ViewBag.Title = "Galería de Imágenes";
}
<div class="bg-gray-800 text-white p-5 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-4" style="color: white;">@ViewBag.Title</h1>
</div>
<div class="w-full mt-8 bg-gray-800 p-6 rounded-lg shadow-lg">
    <div class="flex flex-wrap justify-start items-stretch space-y-4 lg:space-y-0 lg:space-x-4">
        @foreach (var img in Model)
        {
            <div class="p-2" style="width: 25%;">
                <div class="card bg-dark text-white h-100">
                    <div class="d-flex justify-content-center">
                        <img src="@img.Img" class="card-img-top" style="width: 100%; height: 200px; object-fit: cover; border: 2px solid white;" alt="Imagen">
                    </div>
                    <div class="card-body d-flex flex-column justify-content-center">
                        <p class="text-center mt-2">@img.Prompt</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
