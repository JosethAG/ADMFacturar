<form>
    <div class="border-b border-gray-900/10 pb-12">
        <h2 class="text-base font-semibold leading-7 text-white">Filtros</h2>
        <div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-4">

            <div class="sm:col-span-1">
                <label for="entry_date" class="block text-sm font-medium leading-6 text-white">Fecha Emisión</label>
                <div class="mt-2">
                    <input type="date" id="entry_date" name="entry_date" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px;">
                </div>
            </div>

            <div class="sm:col-span-1">
                <label for="customer" class="block text-sm font-medium leading-6 text-white">Cliente</label>
                <div class="mt-2">
                    <select id="customer" name="customer" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px; height: 35px;">
                        <option value="">Seleccionar Cliente</option>
                        <!-- SUPONGO QUE SE TOMAN DE LA BASE DE DATOS -->
                        <option value="Cliente A">Cliente A</option>
                        <option value="Cliente B">Cliente B</option>
                        <option value="Cliente C">Cliente C</option>
                    </select>
                </div>
            </div>

            <div class="sm:col-span-1">
                <label for="salesperson" class="block text-sm font-medium leading-6 text-white">Vendedor</label>
                <div class="mt-2">
                    <select id="salesperson" name="salesperson" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px; height: 35px;">
                        <option value="">Seleccionar Vendedor</option>
                        <!-- SUPONGO QUE SE TOMAN DE LA BASE DE DATOS -->
                        <option value="Vendedor A">Vendedor A</option>
                        <option value="Vendedor B">Vendedor B</option>
                        <option value="Vendedor C">Vendedor C</option>
                    </select>
                </div>
            </div>

            <div class="sm:col-span-1">
                <label for="status" class="block text-sm font-medium leading-6 text-white">Estado</label>
                <div class="mt-2">
                    <select id="status" name="status" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px; height: 35px;">
                        <option value="">Seleccionar Estado</option>
                        <option value="Pagado">Pagado</option>
                        <option value="Sin Pagar">Sin Pagar</option>
                    </select>
                </div>
            </div>

            <div class="sm:col-span-1">
                <label for="total" class="block text-sm font-medium leading-6 text-white">Total</label>
                <div class="mt-2">
                    <input type="text" id="total" name="total" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px;">
                </div>
            </div>

        </div>
    </div>

    <div class="form-group">
        <input asp-action="Index" type="submit" value="Agregar Factura" class="btn-info" style="background-color: #3985CD; color: #fff; padding: 5px; border-radius: 5px; ">
        <!-- EN CASO DE QUE SE TOMEN DE BASE DE DATOS IMAGINO QUE SE TIENEN QUE PONER AGREGAR NUEVOS XD -->
        <input asp-action="Index" type="submit" value="Agregar Cliente" class="btn-info" style="background-color: #3985CD; color: #fff; padding: 5px; border-radius: 5px; ">
        <input asp-action="Index" type="submit" value="Agregar Vendedor" class="btn-info" style="background-color: #3985CD; color: #fff; padding: 5px; border-radius: 5px; ">
    </div>
</form>


