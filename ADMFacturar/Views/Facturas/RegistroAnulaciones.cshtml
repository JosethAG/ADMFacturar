<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Facturación Avanzada</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body class="bg-gray-900 text-white">

    <div class="max-w-7xl mx-auto p-4">

        <!-- Formulario de Encabezado de Factura -->
        <form class="bg-gray-800 p-6 rounded-lg shadow-lg mb-8">
            <h2 class="text-lg font-semibold leading-7 text-white mb-4">Encabezado de Factura</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <div>
                    <label for="consecutivo" class="block text-sm font-medium leading-6 text-white">Consecutivo</label>
                    <input type="text" id="consecutivo" name="consecutivo" class="mt-1 block w-full rounded-md bg-gray-700 border-0 py-1.5 text-white focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6" disabled>
                </div>
                <div class="relative">
                    <label for="cliente" class="block text-sm font-medium leading-6 text-white">Cliente</label>
                    <div class="flex">
                        <input type="text" id="cliente" name="cliente" class="mt-1 block w-full rounded-md bg-gray-700 border-0 py-1.5 text-white placeholder-gray-400 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        <button type="button" class="ml-2 mt-1 text-gray-400 hover:text-white" aria-label="Buscar cliente">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div>
                    <label for="condicionPago" class="block text-sm font-medium leading-6 text-white">Condición de Pago</label>
                    <select id="condicionPago" name="condicionPago" class="mt-1 block w-full rounded-md bg-gray-700 border-0 py-1.5 text-white focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        <option value="contado">Contado</option>
                        <option value="credito">Crédito</option>
                    </select>
                </div>
                <div>
                    <label for="transporte" class="block text-sm font-medium leading-6 text-white">Transporte</label>
                    <select id="transporte" name="transporte" class="mt-1 block w-full rounded-md bg-gray-700 border-0 py-1.5 text-white focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        <option value="envio1">Envío 1</option>
                        <option value="envio2">Envío 2</option>
                    </select>
                </div>
            </div>
        </form>

        <!-- Tabla de Productos -->
        <div class="bg-gray-800 p-6 rounded-lg shadow-lg mb-8">
            <h2 class="text-lg font-semibold leading-7 text-white mb-4">Detalle de Productos</h2>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-gray-900 text-white border border-gray-700">
                    <thead>
                        <tr>
                            <th class="py-3 px-4 border-b border-gray-700">Producto</th>
                            <th class="py-3 px-4 border-b border-gray-700">Cantidad</th>
                            <th class="py-3 px-4 border-b border-gray-700">Total</th>
                            <th class="py-3 px-4 border-b border-gray-700">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="tablaProductos" class="text-center">
                        <!-- Filas de productos se generarán dinámicamente aquí -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Campos de Subtotal, Descuento y Total -->
        <div class="bg-gray-800 p-6 rounded-lg shadow-lg mb-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="col-span-1">
                    <label for="descuentoPorcentaje" class="block text-sm font-medium leading-6 text-white">Descuento %</label>
                    <input type="number" id="descuentoPorcentaje" name="descuentoPorcentaje" class="mt-1 block w-1/2 rounded-md bg-gray-700 border-0 py-1.5 text-white placeholder-gray-400 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6" step="0.01">
                </div>
                <div class="col-span-1">
                    <label for="subtotal" class="block text-sm font-medium leading-6 text-white">Subtotal</label>
                    <span id="subtotal" class="mt-1 block w-full py-1.5 text-white">0.00</span>
                </div>
                <div class="col-span-1">
                    <label for="descuento" class="block text-sm font-medium leading-6 text-white">Descuento</label>
                    <span id="descuento" class="mt-1 block w-full py-1.5 text-white">0.00</span>
                </div>
                <div class="col-span-1">
                    <label for="total" class="block text-sm font-medium leading-6 text-white">Total</label>
                    <span id="total" class="mt-1 block w-full py-1.5 text-white">0.00</span>
                </div>
            </div>
        </div>

    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const productos = [];
            const tablaProductos = document.getElementById('tablaProductos');
            const subtotalElement = document.getElementById('subtotal');
            const descuentoElement = document.getElementById('descuento');
            const totalElement = document.getElementById('total');
            const descuentoPorcentajeElement = document.getElementById('descuentoPorcentaje');

            function actualizarTablaProductos() {
                tablaProductos.innerHTML = '';
                let subtotal = 0;

                productos.forEach((prod, index) => {
                    const totalProducto = prod.cantidad * prod.precio;
                    const fila = `<tr>
                                            <td class="py-3 px-4 border-b border-gray-700">${prod.nombre}</td>
                                            <td class="py-3 px-4 border-b border-gray-700">${prod.cantidad}</td>
                                            <td class="py-3 px-4 border-b border-gray-700">${totalProducto}</td>
                                            <td class="py-3 px-4 border-b border-gray-700">
                                                <button class="bg-red-500 hover:bg-red-600 text-white py-1 px-3 rounded" onclick="eliminarProducto(${index})">Eliminar</button>
                                            </td>
                                        </tr>`;
                    tablaProductos.innerHTML += fila;
                    subtotal += totalProducto; // Acumulando subtotal
                });

                // Mostrar subtotal y total
                subtotalElement.textContent = subtotal.toFixed(2);
                const descuentoPorcentaje = parseFloat(descuentoPorcentajeElement.value) || 0;
                const descuento = (subtotal * descuentoPorcentaje) / 100;
                descuentoElement.textContent = descuento.toFixed(2);
                totalElement.textContent = (subtotal - descuento).toFixed(2);
            }

            function eliminarProducto(index) {
                // Eliminar producto del array
                productos.splice(index, 1);
                // Actualizar tabla de productos
                actualizarTablaProductos();
            }

            // Event listener para cambios en el descuento porcentaje
            descuentoPorcentajeElement.addEventListener('input', function () {
                actualizarTablaProductos();
            });

        });
    </script>

</body>
</html>
