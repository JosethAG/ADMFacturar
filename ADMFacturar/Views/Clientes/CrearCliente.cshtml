@model Cliente

@{
	ViewBag.Title = "Crear Cliente";
	var provincias = ViewData["Provincias"] as List<Provincia>;
	var cantones = ViewData["Cantones"] as List<Canton>;
	var distritos = ViewData["Distritos"] as List<Distrito>;
}

<!--                  Final Tabla                        -->

<form asp-action="CrearCliente" method="post">
	<div class="border-b border-gray-900/10 pb-12">
		<h2 class="text-base font-semibold leading-7 text-white">Creación de nuevo cliente</h2>
		<div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">

			<div class="sm:col-span-2 ">
				<label for="PK_Cliente" class="block text-sm font-medium leading-6 text-white">Código Cliente</label>
				<div class="mt-2">
					<input asp-for="PK_Cliente" type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px;">
				</div>
			</div>
		
			<div class="sm:col-span-2">
				<label for="TipoIdentificacion" class="block text-sm font-medium leading-6 text-white">Tipo de Identificación</label>
				<div class="mt-2">
					<select asp-for="TipoIdentificacion"  class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px; height: 35px;">
						<option value="1">Fisico</option>
						<option value="2">Juridico</option>
					</select>
				</div>
			</div>

			<div class="sm:col-span-2 ">
				<label for="Identificacion" class="block text-sm font-medium leading-6 text-white">Número de Identificación</label>
				<div class="mt-2">
					<input asp-for="Identificacion" type="number" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px;">
				</div>
			</div>
			<div class="sm:col-span-2">
				<label for="Nombre" class="block text-sm font-medium leading-6 text-white">Nombre</label>
				<div class="mt-2">
					<input asp-for="Nombre" type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px;">
				</div>
			</div>

		
			<div class="sm:col-span-2">
				<label for="Telefono" class="block text-sm font-medium leading-6 text-white">Teléfono</label>
				<div class="mt-2">
					<input asp-for="Telefono" type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px;">
				</div>
			</div>

			<div class="sm:col-span-2">
				<label for="Correo" class="block text-sm font-medium leading-6 text-white">Correo</label>
				<div class="mt-2">
					<input asp-for="Correo"  type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px;">
				</div>
			</div>
			<div class="sm:col-span-2">
				<label for="FK_CondicionPago" class="block text-sm font-medium leading-6 text-white">Condición de Pago</label>
				<div class="mt-2">
					<select asp-for="FK_CondicionPago" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px; height: 35px;">
						<option value="1">Contado</option>
						<option value="2">Credito 30 Días</option>
						<option value="2">Credito 60 Días</option>
					</select>
				</div>
			</div>
			<div class="sm:col-span-2">
				<label for="FK_Transporte" class="block text-sm font-medium leading-6 text-white">Transporte</label>
				<div class="mt-2">
					<select asp-for="FK_Transporte" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px; height: 35px;">
						<option value="1">Transporte</option>
						<option value="2">Personal</option>
					</select>
				</div>
			</div>
			<div class="sm:col-span-2">
				<label for="FK_Vendedor" class="block text-sm font-medium leading-6 text-white">Vendedor</label>
				<div class="mt-2">
					<select asp-for="FK_Vendedor" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px; height: 35px;">
						<option value="1">Juan</option>
						<option value="2">Maria</option>
					</select>
				</div>
			</div>

			<div class="sm:col-span-2">
				<label for="Provincia" class="block text-sm font-medium leading-6 text-white">Provincia</label>
				<div class="mt-2">
					<select asp-for="Provincia" id="Provincia" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" onchange="filterCantones()">
						<option value="">Seleccione una provincia</option>
						@if (provincias != null)
						{
							@foreach (var provincia in provincias)
							{
								<option value="@provincia.ID_PROVINCIA">@provincia.NOMBRE</option>
							}
						}
					</select>
				</div>
			</div>

			<div class="sm:col-span-2">
				<label for="Canton" class="block text-sm font-medium leading-6 text-white">Cantón</label>
				<div class="mt-2">
					<select asp-for="Canton" id="Canton"  class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" onchange="filterDistritos()">
						<option value="">Seleccione un cantón</option>
						@if (cantones != null)
						{
							@foreach (var canton in cantones)
							{
								<option value="@canton.ID_CANTON" data-provincia="@canton.ID_PROVINCIA">@canton.NOMBRE</option>
							}
						}
					</select>
				</div>
			</div>

			<div class="sm:col-span-2">
				<label for="Distrito" class="block text-sm font-medium leading-6 text-white">Distrito</label>
				<div class="mt-2">
					<select asp-for="Distrito" id="Distrito" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
						<option value="">Seleccione un distrito</option>
						@if (distritos != null)
						{
							@foreach (var distrito in distritos)
							{
								<option value="@distrito.ID_DISTRITO" data-provincia="@distrito.ID_PROVINCIA" data-canton="@distrito.ID_CANTON">@distrito.NOMBRE</option>
							}
						}
					</select>
				</div>
			</div>

			<div class="sm:col-span-2">
				<label for="OtrasSenas" class="block text-sm font-medium leading-6 text-white">Barrio y otras señas</label>
				<div class="mt-2">
					<input asp-for="OtrasSenas" type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px;">
				</div>
			</div>	
			<div class="sm:col-span-2">
				<label for="Estado" class="block text-sm font-medium leading-6 text-white">Estado</label>
				<div class="mt-2">
					<select asp-for="Estado" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" style="padding-left: 10px; height: 35px;">
						<option value="true">Activo</option>
						<option value="false">Inactivo</option>
					</select>
				</div>
			</div>
		</div>
		<br />
		<br />
		<input asp-for="FK_Usuario_Creacion" value="user1" hidden/>
		<input asp-for="FK_Usuario_Modificacion" value="user1" hidden/>
		<input asp-for="Fecha_Modificacion" value="" hidden/>
		<button type="submit" asp-action="CrearCliente" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Guardar</button>
		<button asp-action="Index" class="rounded-md bg-red-600 px-2 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600">Cancelar</button>
	</div>
</form>


<script>
	function filterCantones() {
		var provinciaId = document.getElementById("Provincia").value;
		var cantonSelect = document.getElementById("Canton");
		var cantonOptions = cantonSelect.getElementsByTagName("option");

		for (var i = 1; i < cantonOptions.length; i++) {
			var option = cantonOptions[i];
			if (option.getAttribute("data-provincia") === provinciaId) {
				option.style.display = "block";
			} else {
				option.style.display = "none";
			}
		}
	}

	function filterDistritos() {
		var provinciaId = document.getElementById("Provincia").value;
		var cantonId = document.getElementById("Canton").value;
		var distritoSelect = document.getElementById("Distrito");
		var distritoOptions = distritoSelect.getElementsByTagName("option");

		for (var i = 1; i < distritoOptions.length; i++) {
			var option = distritoOptions[i];
			if (option.getAttribute("data-provincia") === provinciaId && option.getAttribute("data-canton") === cantonId) {
				option.style.display = "block";
			} else {
				option.style.display = "none";
			}
		}
	}
</script>